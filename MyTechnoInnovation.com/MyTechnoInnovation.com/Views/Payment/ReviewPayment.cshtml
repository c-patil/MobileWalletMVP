@model MyTechnoInnovation.com.Models.PaymentViewModels
@{
    ViewBag.Title = "ReviewPayment";
}

@{
    ViewBag.Title = "Review Payment";
}

<h2>Review Payment</h2>
<hr />
@using (Html.BeginForm("ReviewPayment", "Payment", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.PaymentAmt)
    @Html.HiddenFor(m => m.PaymentDate)
    @Html.HiddenFor(m => m.PaymentMethod)
    <div class="form-group">
        <label for="amount" class="col-sm-2 control-label">Payment Amount</label>

        <div class="col-sm-10">
            <p class="form-control-static">$ @Model.PaymentAmt</p>
        </div>
    </div>

    <div class="form-group">
        <label for="date" class="col-sm-2 control-label">Payment Date</label>
        <div class='col-sm-10'>
            <p class="form-control-static">@Model.PaymentDate</p>
        </div>
    </div>

    <div class="form-group">
        <label for="pymtMethod" class="col-sm-2 control-label">Payment Method</label>

        <div class="col-sm-10">
            <p class="form-control-static">@Model.PaymentMethod</p>

        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Confirm</button>
            @*<button type="submit" class="btn btn-default">Modify Payment</button>*@
            @Html.ActionLink("Cancel", "Index", "Payment", new { @class = "btn btn-default" })
        </div>
    </div>

}

